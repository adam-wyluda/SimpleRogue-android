<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="simplerogue.android.activity.MainActivity" android:id="@+id/layout" android:padding="0dp">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toEndOf="@+id/buttonNE"
            android:layout_toStartOf="@+id/buttonChangeMode" android:background="#b0999d98"
            android:id="@+id/gameLayout" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buttonAction4" android:clickable="true">
    </FrameLayout>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSW"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonS"
            android:layout_alignTop="@+id/buttonSW" android:layout_toEndOf="@+id/buttonSW"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSE"
            android:layout_alignTop="@+id/buttonS" android:layout_toEndOf="@+id/buttonS"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonW"
            android:layout_above="@+id/buttonSW" android:layout_alignParentStart="true"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonC"
            android:layout_alignTop="@+id/buttonW" android:layout_toEndOf="@+id/buttonW"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonE"
            android:layout_alignTop="@+id/buttonC" android:layout_alignStart="@+id/buttonSE"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNW"
            android:layout_above="@+id/buttonW" android:layout_alignParentStart="true"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonN"
            android:layout_alignTop="@+id/buttonNW" android:layout_toEndOf="@+id/buttonNW"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNE"
            android:layout_alignTop="@+id/buttonN" android:layout_toEndOf="@+id/buttonN"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAction4"
            android:layout_alignBottom="@+id/buttonSE" android:layout_alignParentEnd="true"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAction3"
            android:layout_alignParentBottom="true" android:layout_toStartOf="@+id/buttonAction4"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonShowMenu"
            android:layout_alignParentBottom="true" android:layout_toStartOf="@+id/buttonAction3"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonChangeMode"
            android:layout_alignBottom="@+id/buttonE" android:layout_toStartOf="@+id/buttonAction3"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAction1"
            android:layout_alignBottom="@+id/buttonChangeMode" android:layout_toStartOf="@+id/buttonAction4"
            />
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAction2"
            android:layout_alignBottom="@+id/buttonChangeMode" android:layout_alignEnd="@+id/buttonAction4"
            />
</RelativeLayout>
